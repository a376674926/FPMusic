<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal"
    android:background="@color/now_player_color" >

    <ImageView
        android:id="@+id/album_img"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/albumart_mp_unknown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="10dip"
            android:singleLine="true"
            android:textColor="@color/appwidget_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="1000"
            android:layout_marginTop="3dp"
            android:progressDrawable="@drawable/progress_horizontal"
            style="?android:attr/progressBarStyleHorizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/control_prev"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_widget_mp_prev_selector" />

            <ImageView
                android:id="@+id/control_play"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:src="@drawable/ic_widget_mp_play_selector" />

            <ImageView
                android:id="@+id/control_next"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:background="@drawable/ic_widget_mp_next_selector" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>